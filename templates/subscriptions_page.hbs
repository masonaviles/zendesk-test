<div class="container article">
  <div class="container-inner">

    {{breadcrumbs}}
    <div class="search-box search-box_page lt-mb-8">
      <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 26">
        <path d="M20,18.9c1.6-2.1,2.4-4.6,2.4-7.2c0-6.4-5-11.7-11.2-11.7C5,0,0,5.3,0,11.7s5,11.7,11.2,11.7
              c2.5,0,5-0.9,6.9-2.5l4.6,4.8c0.3,0.3,0.6,0.4,0.9,0.4c0.3,0,0.7-0.1,0.9-0.4c0.5-0.6,0.5-1.4,0-2L20,18.9z M20,12
              c0,4.9-3.8,9-8.5,9s-9.1-4.1-9.1-9s4.4-9.5,9.1-9.5S20,7,20,12z"/>
      </svg>
      {{search instant=true placeholder=settings.search_placeholder}}
    </div>

    <div id="main-content">
      <h1>{{t 'my_activities' }}</h1>

      <nav class="my-activities-menu my-activities-menu--main">
        <ul class="my-activities-menu__items clearfix">
          {{#if help_center.request_management_enabled}}
            <li class="my-activities-menu__item">{{link 'requests'}}</li>
          {{/if}}
          <li class="my-activities-menu__item">{{link 'contributions'}}</li>
          <li class="my-activities-menu__item is-active">{{t 'following'}}</li>
        </ul>
      </nav>
    </div>

    <div class="box box_min box_top">
      {{#if subscriptions}}
        <table class="my-activities-items" id="main-content">
          <thead class="my-activities-items__head">
            <tr class="my-activities-items__row">
              <td class="my-activities-items__col">{{t 'title'}}</td>
              <td class="my-activities-items__col">{{t 'type'}}</td>
              <td class="my-activities-items__col">{{t 'subscription'}}</td>
              <td class="my-activities-items__col">&nbsp;</td>
            </tr>
          </thead>
          <tbody class="my-activities-items__body">
            {{#each subscriptions}}
              <tr class="my-activities-items__row my-activities-item">
                <td class="my-activities-items__col">
                  <a class="my-activities-item__title" href="{{url}}">
                    {{excerpt title characters=60}}
                  </a>
                </td>
                <td class="my-activities-items__col my-activities-item__meta">
                  {{name}}</td>
                <td class="my-activities-items__col my-activities-item__meta">
                  {{following}}</td>
                <td
                    class="my-activities-items__col my-activities-item__meta subscriptions-subscribe">
                  {{subscribe}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        {{pagination}}
      {{else}}
        <p>{{t 'not_following'}}</p>
      {{/if}}
    </div>
  </div>
</div>